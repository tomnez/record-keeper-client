<div class="panel panel-default login-panel">
  <div class="panel-body">
    <form class="login-form" {{action "authenticate" on="submit"}}>
      <div class="form-group">
        <label for="identification">Email</label>
        {{input value=identification class="form-control login-email" placeholder="Enter Email"}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{input value=password class="form-control login-password" type="password" placeholder="Enter Password"}}
      </div>
      <button type="submit" class="btn btn-primary btn-lg pull-right login-submit">Submit</button>
    </form>
  </div>
</div>
